{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"types": ["astro/client"],
		"baseUrl": ".",
		"paths": {
			"@layouts/*": ["src/layouts/*"],
			"@components/*": ["src/components/*"],
			"@scripts/*": ["src/scripts/*"],
			"@utils/*": ["utils/*"],
			"@imgs/*": ["src/assets/imgs/*"],
			"@svgs/*": ["src/assets/svgs/*"],
			"@icons/*": ["src/assets/svgs/icons/*"]
		},
		"noEmit": true,
		"allowImportingTsExtensions": true
	}
}
